<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="product_page_image_small" type="thumbnail">
                <width>100</width>
                <height>100</height>
            </image>
            <image id="mini_cart_product_thumbnail" type="thumbnail">
                <width>100</width>
                <height>100</height>
            </image>
            <image id="cart_cross_sell_products" type="small_image">
                <width>330</width>
                <height>361</height>
            </image>
            <image id="new_products_content_widget_grid" type="small_image">
                <width>330</width>
                <height>361</height>
            </image>
            <image id="category_page_grid" type="small_image">
                <width>330</width>
                <height>361</height>
            </image>
            <image id="category_page_grid-1" type="small_image">
                <width>330</width>
                <height>361</height>
            </image>
            <image id="category_page_list" type="small_image">
                <width>330</width>
                <height>361</height>
            </image>
            <image id="related_products_list" type="small_image">
                <width>330</width>
                <height>361</height>
            </image>
            <image id="upsell_products_list" type="small_image">
                <width>330</width>
                <height>361</height>
            </image>
            <image id="swatch_image" type="swatch_image">
                <width>30</width>
                <height>30</height>
            </image>
            <image id="swatch_thumb" type="swatch_thumb">
                <width>110</width>
                <height>110</height>
            </image>
            <image id="swatch_image_base" type="swatch_image">
                <width>30</width>
                <height>30</height>
            </image>
            <image id="swatch_thumb_base" type="swatch_thumb">
                <width>110</width>
                <height>110</height>
            </image>
        </images>
    </media>

    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="navdir">vertical</var>
            <var name="navarrows">false</var>
            <var name="arrows">false</var>

            <var name="fullscreen">
                <var name="nav">thumbs</var> <!-- Fullscreen navigation style (false/thumbs/dots) -->
                <var name="loop">true</var> <!-- Fullscreen navigation loop (true/false/null) -->
                <var name="arrows">false</var> <!-- Turn on/off arrows on the sides preview in fullscreen (true/false/null) -->
                <var name="caption">false</var> <!-- Display alt text as image title in fullscreen(true/false) -->
                <var name="navdir">vertical</var> <!--Sliding direction of thumbnails in fullscreen(horizontal/vertical)  -->
                <var name="navarrows">false</var> <!-- Turn on/off on the thumbs navigation sides arrows(true/false) -->
            </var>
        </var>

        <var name="magnifier">
            <var name="enabled">false</var> <!-- Turn on/off magnifier (true/false) -->
        </var>
    </vars>
</view>